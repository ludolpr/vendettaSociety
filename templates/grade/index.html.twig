{% extends 'base.html.twig' %}

{% block title %}Grade{% endblock %}

{% block body %}
<div class="h-full p-6 bg-gray-100">
    <h1 class="text-2xl font-bold mb-4">Grade</h1>

    <div class="overflow-x-auto bg-white rounded-lg shadow">
        {% for grade in grades %}
        {% if grade.job_id %}

        <table class="min-w-full bg-white">
            <tbody>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left bg-gray-200">Id</th>

                </tr>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left bg-gray-200">Name</th>
                </tr>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left bg-gray-200">Details</th>
                </tr>
            </tbody>
        </table>
        {% else %}
        <tr>
            <td colspan="5" class="px-6 py-4 whitespace-nowrap text-center text-black">Aucun grade trouv√©</td>
        </tr>
        {% endif %}
        {% endfor %}
    </div>

    <div class="mt-6">
        <a href="{{ path('app_grade_index') }}" class="inline-block px-6 py-2 mr-2 text-white bg-blue-500 rounded hover:bg-blue-600">Back to list</a>
    </div>

</div>
{% endblock %}
