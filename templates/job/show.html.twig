{% extends 'base.html.twig' %}

{% block title %}Job{% endblock %}

{% block body %}
<div class="h100 ">
    <div class="h-full p-6 ">
        <h1 class="text-2xl font-bold mb-4 text-white">Job</h1>
    
        <div class="overflow-x-auto bg-white rounded-lg shadow max-w-full">
            <table class="min-w-full">
                <tbody class="mb-5">
                    <tr class="border-b">
                        <th class="px-6 py-4 text-left bg-gray-200">Name</th>
                        <td class="px-6 py-4 font-medium">{{ job.name }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="px-6 py-4 text-left bg-gray-200">Description</th>
                        <td class="px-6 py-4 font-medium">{{ job.description }}</td>
                    </tr>
                    
                </tbody>
            </table>

            <table class="min-w-full bg-white">
                <tbody>
                    {% for grade in job.grades %}
                    <tr class="border-b">
                        <td class="px-6 py-4 font-medium">{{ grade.name }} : {{ grade.details}}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
        {% if job.available == 0 %}
        <div class="mt-6">
            <a href="{{ path('app_job_legal') }}" class="inline-block px-6 py-2 mr-2 text-black bg-white rounded font-medium hover:bg-[#fee501]">Retour à la liste</a>
            <!-- <a href="{{ path('app_job_index') }}" class="inline-block px-6 py-2 mr-2 text-black bg-white rounded font-medium hover:bg-[#fee501]">Voir les grades</a> -->
        </div>
        {% else %}
        <div class="mt-6">
            <a href="{{ path('app_job_illegal') }}" class="inline-block px-6 py-2 mr-2 text-black bg-white rounded font-medium hover:bg-[#fee501]">Retour à la liste</a>
            <!-- <a href="{{ path('app_job_index') }}" class="inline-block px-6 py-2 mr-2 text-black bg-white rounded font-medium hover:bg-[#fee501]">Voir les grades</a> -->
        </div>
        {% endif %}
    </div>
</div>
    
{% endblock %}
